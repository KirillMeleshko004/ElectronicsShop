<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ElectronicsShop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ElectronicsShop"
    xmlns:views="clr-namespace:ElectronicsShop.Views"
    xmlns:globalconst="clr-namespace:ElectronicsShop.GlobalConst"
    xmlns:viewmodel="clr-namespace:ElectronicsShop.ViewModels"
    Shell.TabBarIsVisible="False"
    x:DataType="viewmodel:AppShellViewModel"
    Shell.TitleColor="{StaticResource PrimaryTextColor}">

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:Views.AuthorizationView}"
                  Shell.FlyoutBehavior="Disabled"
                  FlyoutItemIsVisible="False"
                  Route="AuthorizationView"/>

    <FlyoutItem Route="ShopMainView" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Shop" Icon="{x:Static globalconst:Icons.ShopIcon}" ContentTemplate="{DataTemplate views:ShopMainView}"/>
        <ShellContent Title="Categories" Icon="{x:Static globalconst:Icons.ShopIcon}" ContentTemplate="{DataTemplate views:CategoriesView}"/>
        <ShellContent Title="Cart" Icon="{x:Static globalconst:Icons.CartIcon}" ContentTemplate="{DataTemplate views:CartView}"/>
        <ShellContent Title="My account" Icon="{x:Static globalconst:Icons.UserIcon}" ContentTemplate="{DataTemplate views:ShopMainView}"/>
        <ShellContent Title="Favourites" Icon="{x:Static globalconst:Icons.FavouritesIcon}" ContentTemplate="{DataTemplate views:ShopMainView}"/>
        <ShellContent Title="Settings" Icon="{x:Static globalconst:Icons.SettingsIcon}" ContentTemplate="{DataTemplate views:ShopMainView}"/>
        <ShellContent Title="Contact us" Icon="{x:Static globalconst:Icons.ContactUsIcon}" ContentTemplate="{DataTemplate views:ShopMainView}"/>
    </FlyoutItem>
    
    <Shell.FlyoutFooter>
        <Button Margin="20" 
                Text="Sign Out"
                Command="{Binding LogOutCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="{StaticResource PrimaryTextColor}"
                CornerRadius="20"/>
    </Shell.FlyoutFooter>
</Shell>
