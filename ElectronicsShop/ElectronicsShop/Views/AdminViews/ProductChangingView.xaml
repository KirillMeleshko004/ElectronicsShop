<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElectronicsShop.Views.AdminViews.ProductChangingView"
             xmlns:viewmodel="clr-namespace:ElectronicsShop.ViewModels.AdminViewModels"
             Title="Change Product"
             x:DataType="viewmodel:ProductChangingViewModel">
    <VerticalStackLayout Spacing="10" Padding="10">
        <Image Source="{Binding ImageUrl, Mode=TwoWay}" HeightRequest="300"/>
        <Button Text="Change image" TextColor="White" Command="{Binding PickImageCommand}"/>
        <Entry Placeholder="Product name" Text="{Binding ProductName, Mode=TwoWay}"/>
        <Picker ItemsSource="{Static viewmodel:ProductCreationViewModel.Categories}" SelectedItem="{Binding ProductCategory}"/>
        <Entry Placeholder="Product manufacturer" Text="{Binding Manufacturer, Mode=TwoWay}"/>
        <Entry Placeholder="Product price" Text="{Binding Price, Mode=TwoWay}"/>
        <Editor Placeholder="Description" Text="{Binding Description, Mode=TwoWay}" HorizontalOptions="Fill"/>
        <Button Text="Change" TextColor="White" Command="{Binding ChangeProductCommand}"/>
    </VerticalStackLayout>
</ContentPage>