<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ElectronicsShop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ElectronicsShop"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate local:Views.AuthorizationView}"
        Route="Views.AuthorizationView"/>
    <ShellContent
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate local:Views.RegistrationView}"
        Route="Views.RegistrationView"/>

</Shell>
